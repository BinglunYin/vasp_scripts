#!/bin/bash
# B. Yin


dirn=$1;
dirn=${dirn%/};         # to remove /

# dir_least
dirlst=${dirn}_least      # must use {} due to _ 

echo $dirn
echo $dirlst



#=======================

rm -rf $dirlst
mkdir  $dirlst

dirnPATH=`pwd`/$dirn
dirlstPATH=`pwd`/$dirlst

echo $dirnPATH 
echo $dirlstPATH



#=======================


rsync -amv  --include={INCAR,KPOINTS,CONTCAR,OUTCAR,y_post_*}   \
    --include="*/"  --exclude="*"  "${dirnPATH}/"  "${dirlstPATH}/" 



#=======================

echo "==>  compressing ..."

tar -cJf  $dirlst.tar.xz  $dirlst;

rm -r $dirlst



